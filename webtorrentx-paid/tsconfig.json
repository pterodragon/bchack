{
   "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "sourceMap": true,
        "outDir": "dist/",
         "types": [
            "node"
        ],
        "esModuleInterop": true,
        "strict": false,
        "skipLibCheck": true
    },
    "include": [
        "index.ts",
        "src/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      ".npm"
    ]
}
